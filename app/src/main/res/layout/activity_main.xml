<?xml version="1.0" encoding="utf-8"?>
<!---androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout!-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/White"
    >
    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/headerState"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:longClickable="true"
            android:src="@drawable/status_gray" />
        <ImageView
            android:id="@+id/headerMenu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@id/headerState"
            android:layout_alignParentRight="true"
            android:layout_marginTop="1dp"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:longClickable="true"
            android:src="@drawable/lep500" />

        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/headerState"
            android:text="Опоры России"
            android:textColor="@color/White"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/headerGPS"
            android:layout_width="37dp"
            android:layout_height="38dp"
            android:layout_alignBottom="@id/headerMenu"
            android:layout_toLeftOf="@id/headerMenu"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="1dp"
            android:src="@drawable/gps_off" />
        <TextView
            android:id="@+id/headerClock"
            android:layout_width="50dp"
            android:layout_height="18dp"
            android:layout_alignLeft="@+id/headerTitle"
            android:layout_below="@+id/headerTitle"
            android:text="00:00"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/headerLastGPSTime"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_alignTop="@+id/headerState"
            android:layout_marginTop="37dp"
            android:layout_marginRight="-2dp"
            android:layout_toLeftOf="@+id/headerMenu"
            android:text="0"
            android:textAlignment="textEnd"
            android:visibility="invisible"
            android:textColor="@color/White"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/headerSatelliteCount"
            android:layout_width="10dp"
            android:layout_height="18dp"
            android:layout_alignBottom="@+id/headerState"
            android:layout_marginRight="-11dp"
            android:layout_marginBottom="0dp"
            android:layout_toLeftOf="@+id/headerMenu"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="15dp" />
    </RelativeLayout>
    <ScrollView
        android:id="@+id/scroll"
        android:layout_below="@id/headerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:layout_margin="5dp">
        <LinearLayout
            android:id="@+id/log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/White"
            android:orientation="vertical" />
    </ScrollView>
<!---/androidx.coordinatorlayout.widget.CoordinatorLayout!-->
</RelativeLayout>